<script>
    function toggleMenu() {
        const menu = document.getElementById('main-menu');
        const icon = document.getElementById('floating-icon');
        if (menu.style.display === "none") {
            menu.style.display = "block";
            icon.style.display = "none";
        } else {
            menu.style.display = "none";
            icon.style.display = "block";
        }
    }

    function openTab(tabId, el) {
        document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        document.getElementById(tabId).classList.add('active');
        el.classList.add('active');
    }

    function toggleCheck(el) { el.classList.toggle('active'); }

    function updateFov(v) { document.getElementById('fovVal').innerText = parseFloat(v).toFixed(1); }

    const alvos = ["Cabe√ßa", "Peito", "Pesco√ßo"];
    let idx = 0;
    function mudarTarget() {
        idx = (idx + 1) % alvos.length;
        document.getElementById('txtTarget').innerText = alvos[idx];
    }

    function selectType(tipo) {
        document.getElementById('dotAtirar').classList.toggle('active', tipo === 'atirar');
        document.getElementById('dotOlhar').classList.toggle('active', tipo === 'olhar');
    }
</script>

